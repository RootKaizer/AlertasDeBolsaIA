def determinar_accion(rsi, macd, precio_actual, precio_anterior):
    acciones = []

    # Lógica para RSI
    if rsi > 70:
        acciones.append("vender")
    elif rsi < 30:
        acciones.append("comprar")
    else:
        acciones.append("hold")

    # Lógica para MACD
    if macd > 0:
        acciones.append("comprar")
    else:
        acciones.append("vender")

    # Lógica para precio
    if precio_actual > precio_anterior:
        acciones.append("comprar")
    else:
        acciones.append("vender")

    return acciones

